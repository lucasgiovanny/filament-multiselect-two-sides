{
    "private": true,
    "scripts": {
        "dev:styles": "npx tailwindcss -i resources/css/plugin.css -o resources/dist/filament-multiselect-two-sides.css --postcss --watch",
        "dev:scripts": "esbuild resources/js/plugin.js --bundle --sourcemap=inline --outfile=resources/dist/filament-multiselect-two-sides.js --watch",
        "build:styles": "npx tailwindcss -i resources/css/plugin.css -o resources/dist/filament-multiselect-two-sides.css --postcss --minify && npm run purge",
        "build:scripts": "esbuild resources/js/plugin.js --bundle --minify --outfile=resources/dist/filament-multiselect-two-sides.js",
        "purge": "filament-purge -i resources/dist/filament-multiselect-two-sides.css -o resources/dist/filament-multiselect-two-sides.css",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.2",
        "autoprefixer": "^10.4.18",
        "esbuild": "^0.20.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.35",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "tailwindcss": "^3.4.1"
    }
}
